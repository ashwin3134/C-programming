#include <stdio.h>

int main() {
    int arr[5];
    int *ptr = arr;

    // Input elements in the array
    printf("Enter elements in the array:\n");
    for(int i = 0; i < 5; i++) {
        scanf("%d", ptr);
        ptr++;
    }

    // Print the elements of the array using pointers
    printf("The elements of the array are:\n");
    for(int i = 0; i < 5; i++) {
        printf("%d ", *(arr + i));
    }
    printf("\n");

    return 0;
}
